@model IEnumerable<EScode.App.ViewModels.ProdutoViewModel>

@{
    ViewData["Title"] = "Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Novo</a>
</p>
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
               
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               <img src="~/imagens/@item.Imagem" alt="item.Imagem" style="width:70px; height: 100px;"/> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><span class="fa fa-magnifying-glass-plus"></span></a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><span class="fa fa-pen-to-square"></span></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><span class="fa fa-trash"></a>
            </td>
        </tr>
}
    </tbody>
</table>
